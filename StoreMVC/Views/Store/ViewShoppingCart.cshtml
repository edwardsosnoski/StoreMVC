@model StoreMVC.Models.ShoppingCartViewModel

@{
    ViewData["Title"] = "ViewShoppingCart";
}

<h1>Current Shopping Cart</h1>

<table>
    <thead>
        <tr>
           
            <th>Product Name</th>
            <th>Price Per Gram</th>
            <th>Number of Grams</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var product in Model.ListOfShoppingCartProducts)
        {
            <tr>
                @*<td>@product.ProductID</td>*@
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
            </tr>
        }
    </tbody>
</table>